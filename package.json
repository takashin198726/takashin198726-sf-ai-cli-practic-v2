{
    "name": "sf-ai-cli-practice-v2",
    "version": "0.1.0",
    "description": "AI-driven Salesforce CI/CD Platform",
    "main": "index.js",
    "scripts": {
        "lint": "eslint force-app/**/*.js",
        "lint:fix": "eslint force-app/**/*.js --fix",
        "prettier": "prettier --write \"**/*.{cls,trigger,js,json,yaml,yml,md}\"",
        "prettier:check": "prettier --check \"**/*.{cls,trigger,js,json,yaml,yml,md}\"",
        "test:apex": "sf apex run test --test-level RunLocalTests --code-coverage --result-format human",
        "test:apex:json": "sf apex run test --test-level RunLocalTests --code-coverage --result-format json",
        "test:selective": "bash scripts/ci/selective-tests.sh",
        "test:lwc": "jest --config jest.config.js",
        "test:e2e": "playwright test",
        "security:scan": "bash scripts/security/scan-secrets.sh",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "ci:delta": "bash scripts/ci/generate-delta-package.sh",
        "deploy:quick": "bash scripts/ci/quick-deploy.sh deploy",
        "deploy:save-id": "bash scripts/ci/quick-deploy.sh save",
        "hardis:doc": "sf hardis:doc:project2markdown --output-dir docs/generated",
        "hardis:unused": "sf hardis:lint:unusedmetadatas"
    },
    "keywords": [
        "salesforce",
        "sfdx",
        "ci-cd",
        "ai",
        "tdd"
    ],
    "author": "takashin",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@prettier/plugin-xml": "^3.2.2",
        "@salesforce/eslint-config-lwc": "^3.5.2",
        "@salesforce/sfdx-lwc-jest": "^3.1.0",
        "eslint": "^8.54.0",
        "eslint-plugin-import": "^2.29.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "prettier-plugin-apex": "^2.0.1"
    },
    "dependencies": {},
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}