{
    "name": "sf-ai-cli-practice-v2",
    "version": "1.0.0",
    "description": "AI-driven Salesforce Development Platform - Monorepo",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "eslint force-app",
        "lint:fix": "eslint force-app --fix",
        "prettier": "prettier --write \"force-app/**/*.{cls,trigger,js,json,html,css,xml}\"",
        "test:apex": "sf apex run test --test-level RunLocalTests --code-coverage --result-format human",
        "test:apex:json": "sf apex run test --test-level RunLocalTests --code-coverage --result-format json",
        "test:lwc": "jest --config jest.config.js",
        "test:e2e": "playwright test",
        "security:scan": "bash packages/core/scripts/security/scan-secrets.sh",
        "security:secrets": "git-secrets --scan",
        "core:dashboard": "pnpm --filter @sf-ai-cli/core run parallel:dashboard",
        "core:resolve": "pnpm --filter @sf-ai-cli/core run parallel:resolve",
        "core:hardis:start": "pnpm --filter @sf-ai-cli/core run parallel:hardis:start",
        "core:hardis:status": "pnpm --filter @sf-ai-cli/core run parallel:hardis:status",
        "core:quality:lint": "pnpm --filter @sf-ai-cli/core run quality:lint",
        "core:quality:analyze": "pnpm --filter @sf-ai-cli/core run quality:analyze",
        "exp:dev": "pnpm --filter @sf-ai-cli/experimental run dev",
        "exp:review": "pnpm --filter @sf-ai-cli/experimental run ai:review",
        "hardis:doc": "sf hardis:doc:project2markdown --output-dir docs/generated",
        "hardis:unused": "sf hardis:lint:unusedmetadatas"
    },
    "devDependencies": {
        "@salesforce/cli": "^2.70.7",
        "@salesforce/eslint-config-lwc": "^3.6.0",
        "@salesforce/sfdx-lwc-jest": "^5.1.0",
        "@eslint/js": "^9.0.0",
        "eslint": "^9.0.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.9.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "prettier-plugin-apex": "^2.1.5",
        "typescript": "^5.7.2",
        "tsx": "^4.19.2"
    },
    "dependencies": {}
}