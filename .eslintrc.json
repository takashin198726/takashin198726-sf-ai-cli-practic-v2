{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "@salesforce/eslint-config-lwc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "no-debugger": "error",
        "@lwc/lwc/no-api-reassignments": "error",
        "@lwc/lwc/no-deprecated": "warn",
        "@lwc/lwc/valid-api": "error",
        "@lwc/lwc/no-document-query": "warn"
    },
    "overrides": [
        {
            "files": [
                "**/__tests__/**"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
            }
        }
    ]
}